# MariaDB Server Configuration

[mysqld]
# Network
bind-address = 0.0.0.0
port = 3306
skip-networking = false

# Data directory
datadir = /var/lib/mysql

# Logging
log-error = /var/log/mysql/error.log

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Performance
skip-host-cache
skip-name-resolve
